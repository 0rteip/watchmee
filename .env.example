# Environment Configuration for Wayland AI Companion
# Copy this to .env and modify values

# Security - CHANGE THIS!
API_KEY=your-secure-api-key-here

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434

# Model Configuration
# Use ./scripts/switch-model.sh to change models easily
VISION_MODEL=moondream
REASONING_MODEL=llama3.2:3b

# Server Settings
DEBUG=false
HOST=0.0.0.0
PORT=8443

# Context Settings
CONTEXT_WINDOW_SIZE=10
CAPTURES_BEFORE_FEEDBACK=5

# SSL Paths (inside container)
SSL_CERTFILE=/app/certs/server.crt
SSL_KEYFILE=/app/certs/server.key

# Paths (inside container)
TODO_FILE_PATH=/app/config/todo.txt
PERSONAS_FILE_PATH=/app/config/personas.json
