# Client Environment Configuration
# Copy this to .env in the client directory

# Server connection (required)
COMPANION_API_KEY=your-api-key-here
COMPANION_SERVER_URL=https://localhost:8443

# SSL verification (set to false for self-signed certs, or provide CA path)
COMPANION_VERIFY_SSL=false
# COMPANION_CA_CERT_PATH=/path/to/ca.crt

# Capture settings
COMPANION_CAPTURE_INTERVAL=60
COMPANION_MAX_IMAGE_WIDTH=1024
COMPANION_JPEG_QUALITY=75

# Behavior
COMPANION_IDLE_THRESHOLD=300
COMPANION_SUPPRESS_WHEN_MEETING=true

# Notifications
COMPANION_SHOW_NOTIFICATIONS=true
COMPANION_NOTIFICATION_TIMEOUT=5000

# Logging
COMPANION_LOG_LEVEL=INFO
# COMPANION_LOG_FILE=/path/to/companion.log
